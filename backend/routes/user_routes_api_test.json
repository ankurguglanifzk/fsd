{
  "client": "thunder-client",
  "collectionName": "Task Tracker User APIs (Simple)",
  "requests": [
    {
      "name": "1. Admin Login",
      "method": "POST",
      "url": "http://localhost:5000/api/v1/users/login",
      "headers": [{ "name": "Content-Type", "value": "application/json" }],
      "body": {
        "type": "json",
        "raw": {
          "Username": "YOUR_ADMIN_USERNAME",
          "Password": "YOUR_ADMIN_PASSWORD"
        }
      }
    },
    {
      "name": "2. Get Current User (Me)",
      "method": "GET",
      "url": "http://localhost:5000/api/v1/users/me",
      "headers": []
    },
    {
      "name": "List All System Roles",
      "method": "GET",
      "url": "http://localhost:5000/api/v1/users/roles",
      "headers": []
    },
    {
      "name": "Create User (Success)",
      "method": "POST",
      "url": "http://localhost:5000/api/v1/users/",
      "headers": [{ "name": "Content-Type", "value": "application/json" }],
      "body": {
        "type": "json",
        "raw": {
          "Username": "new_creator",
          "Password": "password123",
          "Email": "creator@example.com",
          "FullName": "Task Creator",
          "roles": ["task_creator"]
        }
      }
    },
    {
      "name": "Create User (FAIL - Invalid Role)",
      "method": "POST",
      "url": "http://localhost:5000/api/v1/users/",
      "headers": [{ "name": "Content-Type", "value": "application/json" }],
      "body": {
        "type": "json",
        "raw": {
          "Username": "bad_role_user",
          "Password": "password123",
          "Email": "badrole@example.com",
          "FullName": "Bad Role User",
          "roles": ["non_existent_role"]
        }
      }
    },
    {
      "name": "List All Users",
      "method": "GET",
      "url": "http://localhost:5000/api/v1/users/",
      "headers": []
    },
    {
      "name": "Get User by ID (Edit ID!)",
      "method": "GET",
      "url": "http://localhost:5000/api/v1/users/1",
      "headers": []
    },
    {
      "name": "Update User (Success - Edit ID!)",
      "method": "PUT",
      "url": "http://localhost:5000/api/v1/users/1",
      "headers": [{ "name": "Content-Type", "value": "application/json" }],
      "body": {
        "type": "json",
        "raw": {
          "FullName": "Updated Full Name",
          "roles": ["task_creator"]
        }
      }
    },
    {
      "name": "Update User (FAIL - Invalid Role - Edit ID!)",
      "method": "PUT",
      "url": "http://localhost:5000/api/v1/users/1",
      "headers": [{ "name": "Content-Type", "value": "application/json" }],
      "body": {
        "type": "json",
        "raw": {
          "roles": ["another_bad_role"]
        }
      }
    },
    {
      "name": "Assign Role (Success - Edit ID!)",
      "method": "POST",
      "url": "http://localhost:5000/api/v1/users/1/roles",
      "headers": [{ "name": "Content-Type", "value": "application/json" }],
      "body": {
        "type": "json",
        "raw": {
          "RoleName": "admin"
        }
      }
    },
    {
      "name": "Assign Role (FAIL - Invalid Role - Edit ID!)",
      "method": "POST",
      "url": "http://localhost:5000/api/v1/users/1/roles",
      "headers": [{ "name": "Content-Type", "value": "application/json" }],
      "body": {
        "type": "json",
        "raw": {
          "RoleName": "super_user_does_not_exist"
        }
      }
    },
    {
      "name": "Remove Role (Edit IDs!)",
      "method": "DELETE",
      "url": "http://localhost:5000/api/v1/users/1/roles/2",
      "headers": []
    },
    {
      "name": "Delete User (Edit ID!)",
      "method": "DELETE",
      "url": "http://localhost:5000/api/v1/users/3",
      "headers": []
    },
    {
      "name": "Logout User",
      "method": "POST",
      "url": "http://localhost:5000/api/v1/users/logout",
      "headers": []
    }
  ]
}
